
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url(<%= asset_url('lake.jpg')%>); object-fit: cover">
  <div class="banner-title search">
    <h2>Reservez votre prochaine aventure</h2>
    <form action="/boats">
      <div class="form-group home">
        <label for="">Lieu de départ</label>
        <input name="address" type="text" placeholder="Lausanne, Vevey....." style="width: 170px; height: 36px;">
      </div>

      <div class="form-group home">
        <label for="">Date de début</label>
        <input type="date" name="debut" placeholder="15/08/2021" style="width: 170px; height: 36px;">
      </div>

      <div class="form-group home">
        <label for="">Date de fin</label>
        <input type="date" name="fin" placeholder="15/08/2021" style="width: 170px; height: 36px;">
      </div>
      <input type="submit" value="Rechercher" class="btn btn-clr btn-lg w-100" >
    </form>
  </div>
  <div class="banner-title">
    <h1>La solution idéale pour votre location de bateau</h1>
  </div>
</div>
<div class="container" style="margin-top: 6rem !important; margin-bottom: 6rem !important">
<h1 class="my-5 text-center">Découvrez nos bateaux</h1>
  <div class="row">
    <% @boats.each do |boat| %>
      <div class="co-12 colsm-6 col-md-4 mb-3">
        <%= link_to boat_path(boat), class:'text-decoration-none' do %>
          <div class="card-trip ">
            <div class="card-trip-img " style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url(<%= boat.photo.attached? ? cl_image_path(boat.photo.key) : asset_path('list_background.png') %>)">
              <div class="card-trip-pricing ">
                <h3>CHF <%= '%.2f' % boat.price.round(2) %></h3>
                <h6>par jour</h6>
              </div>
            </div>
            <div class="card-trip-infos ">
              <h2><%= boat.name.capitalize %></h2>
              <p><%= boat.description %></p>
              <p><strong><%= boat.zip_code %> <%= boat.city %></strong></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

