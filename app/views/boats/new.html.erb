<div class="container mx-auto" style="margin-top: 8em" >
  <h1 class="mb-4">Mon nouveau bateau!</h1>
    <div class="container mx-auto">
    <%= simple_form_for @boat do |f| %>
      <div class="personal-information">
        <h2>Information du bateau</h2>
        <%= f.input :name, label: "Nom du bateau" %>
        <%= f.input :address, label: "Port d'attache" %>
        <%= f.input :capacity, label: "Capacité" %>
        <%= f.input :size, label: "Dimension" %>
        <%= f.input :hp, label: "Puissance (Chevaux)" %>
        <%= f.input :description %>
        <%= f.input :price, label: "Tarif journalier" %>
        <%= f.input :photo, as: :file %>

        <%= f.button :submit, "Créer le bateau!", class: "btn btn-clr btn-lg"%>
      </div>
    </div>
  <% end %>
</div>